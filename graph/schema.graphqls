type Topic {
    id: Int!
    name: String!
    userId: Int!
}

input NewTopic {
    name: String!
    userId: Int!
}

input UpdateTopicInput {
    id: Int!
    name: String
}

type Mutation {
    createTopic(input: NewTopic!): Topic!
    updateTopic(input: UpdateTopicInput!): Topic!
    deleteTopic(id: Int!): Boolean!
}

type Query {
    getTopics(userId: Int!): [Topic!]!
    getTopicById(id: Int!): Topic
}
